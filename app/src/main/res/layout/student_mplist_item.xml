<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/mp_card_background">

    <ImageView
        android:id="@+id/mpListItemBookImageView"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/list_image_container_background"
        android:layout_marginHorizontal="10dp"
        android:src="@drawable/libraryloginimg" />

    <TextView
        android:id="@+id/mpListItemBookTitleTextView"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:minHeight="40dp"
        android:maxHeight="40dp"
        android:layout_below="@+id/mpListItemBookImageView"
        android:layout_marginTop="2dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/montserrat"
        android:text="Book Title"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16sp" />

</RelativeLayout>