<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/fragment_drawer_shape"
    tools:context=".activities.LibrarianMain.fragments.LibrarianAddRecordFragment">

    <ImageView
        android:id="@+id/cylinderViewBookImageView"
        android:layout_width="50dp"
        android:layout_height="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        app:srcCompat="@drawable/drawer_cilinder_button" />


    <TextView
        android:id="@+id/studentActionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cylinderViewBookImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/montserrat"
        android:gravity="left"
        android:text="Borrow"
        android:textColor="@color/black"
        android:textSize="34sp" />

    <ImageView
        android:id="@+id/bookImageRecord"
        android:layout_below="@+id/studentActionTextView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:src="@drawable/custom_input"
        app:cornerRadius="20dp" />

    <TextView
        android:id="@+id/bookTitleRecord"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/studentActionTextView"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="25dp"
        android:layout_toEndOf="@+id/bookImageRecord"
        android:fontFamily="@font/montserrat"
        android:gravity="left"
        android:text="Book Title"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/authorName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bookTitleRecord"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:layout_toEndOf="@+id/bookImageRecord"
        android:fontFamily="@font/montserrat"
        android:gravity="left"
        android:text="Author"
        android:textColor="@color/my_black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/studentField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bookImageRecord"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/montserrat"
        android:text="Student:"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/studentName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bookImageRecord"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="25dp"
        android:layout_toEndOf="@+id/studentField"
        android:fontFamily="@font/montserrat"
        android:gravity="left"
        android:text="Student Name"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/studentIDField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/studentField"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/montserrat"
        android:gravity="left"
        android:text="ID:"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/studentID"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/studentName"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="78dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:layout_toEndOf="@+id/studentIDField"
        android:fontFamily="@font/montserrat"
        android:gravity="left"
        android:text="Student ID"
        android:textStyle="italic"
        android:textColor="@color/black"
        android:textSize="24sp" />


    <EditText
        android:visibility="gone"
        android:id="@+id/dueDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/studentID"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="45dp"
        android:layout_centerHorizontal="true"
        android:background="@color/black"
        android:backgroundTint="@color/black"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:letterSpacing=".01"
        android:paddingStart="40dp"

        android:paddingTop="7dp"
        android:paddingEnd="40dp"
        android:paddingBottom="7dp"
        android:text="Pick Due Date"
        android:textColor="@color/white"
        android:textSize="15sp" />


    <Button
        android:id="@+id/confirmButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/editTextDate"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/black"
        android:fontFamily="@font/montserrat"
        android:letterSpacing=".01"
        android:paddingStart="45dp"
        android:paddingTop="7dp"
        android:paddingEnd="45dp"
        android:paddingBottom="7dp"
        android:text="Confirm"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="10dp" />

    <TextView
        android:id="@+id/returnDateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/studentIDField"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/montserrat"
        android:gravity="left"
        android:text="Return \n Date:"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editTextDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/studentID"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="25dp"
        android:layout_toEndOf="@+id/returnDateLabel"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/ic_baseline_calendar_today_24"
        android:ems="10"
        android:inputType="date"
        android:paddingHorizontal="15dp"
        android:paddingVertical="10dp"
        android:textAlignment="center"
        android:textColor="@color/black" />


</RelativeLayout>