<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/librarian_due_list_card_background">

    <ImageView
        android:id="@+id/librarianDueRecordListItemBookLogo"
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/list_image_container_background"
        android:src="@drawable/libraryloginimg" />

    <TextView
        android:id="@+id/librarianDueRecordListItemStudentName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@+id/librarianDueRecordListItemBookLogo"
        android:fontFamily="@font/montserrat"
        android:text="Student Name"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/librarianDueRecordListItemBookTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/librarianDueRecordListItemStudentName"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@+id/librarianDueRecordListItemBookLogo"
        android:fontFamily="@font/montserrat"
        android:text="Book Title"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/librarianDueRecordListItemDueDateField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@+id/librarianDueRecordListItemBookLogo"
        android:fontFamily="@font/montserrat"
        android:text="Due on 69/69/69"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="italic" />

</RelativeLayout>