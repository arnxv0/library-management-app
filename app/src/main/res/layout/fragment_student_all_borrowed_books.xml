<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/fragment_drawer_shape"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.StudentMain.fragments.StudentAllBorrowedBooksFragment">

    <ImageView
        android:id="@+id/studentAllBorrowedBooksCylinderImageView"
        android:layout_width="50dp"
        android:layout_height="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        app:srcCompat="@drawable/drawer_cilinder_button" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/studentAllBorrowedBooksRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/studentAllBorrowedBooksCylinderImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="33dp" />

    <ProgressBar
        android:id="@+id/studentAllBorrowedBooksLoading"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/studentAllBorrowedBooksCylinderImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:visibility="gone" />

</RelativeLayout>